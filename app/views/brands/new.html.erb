<div class="ommyo-member-content">
  <div class="ommyo-member-content-element ommyo-member-content-header">
    <h2>Suggest a Brand</h2>
  </div>
  <div class="ommyo-member-content-element">
    <div id="ommyo-member-form">
      <%= form_tag brand_suggestion_path, style: 'margin-bottom: 0;' do |f| %>
        <%= text_field_tag :name, nil, placeholder: 'Initrode Global' %><br>
        <%= submit_tag "Suggest", id: "ommyo-member-form-send", class: "btn btn-small btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
